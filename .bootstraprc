---

bootstrapVersion: 3

useCustomIconFontPath: false

# Webpack loaders
styleLoaders:
  - style-loader
  - css-loader
  - sass-loader

extractStyles: false

preBootstrapCustomizations: ./public/src/styles/bootstrap/pre-customizations.scss

appStyles: ./public/src/styles/styles.scss

### Bootstrap styles
styles:

  # Mixins
  mixins: true

  # Reset and dependencies
  normalize: true
  print: true
  glyphicons: true

  # Core CSS
  scaffolding: true
  type: true
  code: true
  grid: true
  tables: true
  forms: true
  buttons: true

  # Components
  component-animations: true
  dropdowns: true
  button-groups: true
  input-groups: true
  navs: true
  navbar: true
  breadcrumbs: true
  pagination: true
  pager: true
  labels: true
  badges: true
  jumbotron: true
  thumbnails: true
  alerts: true
  progress-bars: true
  media: true
  list-group: true
  panels: true
  wells: true
  responsive-embed: true
  close: true

  # Components w/ JavaScript
  modals: true
  tooltip: true
  popovers: true
  carousel: true

  # Utility classes
  utilities: true
  responsive-utilities: true

### Bootstrap scripts
scripts:
  transition: false
  alert: false
  button: false
  carousel: false
  collapse: false
  dropdown: false
  modal: false
  tooltip: false
  popover: false
  scrollspy: false
  tab: false
  affix: false